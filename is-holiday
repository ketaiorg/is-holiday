#

holiday=(
	'20130101' '20130114' '20130211' '20130320' '20130429' '20130503' '20130504' '20130505' '20130506' '20130715' '20130916' '20130923' '20131014' '20131103' '20131104' '20131123' '20131223'
	'20140101' '20140113' '20140211' '20140321' '20140429' '20140503' '20140504' '20140505' '20140506' '20140721' '20140915' '20140923' '20141013' '20141103' '20141123' '20141124' '20141223'
	'20150101' '20150112' '20150211' '20150321' '20150429' '20150503' '20150504' '20150505' '20150506' '20150720' '20150921' '20150922' '20150923' '20151012' '20151103' '20151123' '20151223'
	'20160101' '20160111' '20160211' '20160320' '20160321' '20160429' '20160503' '20160504' '20160505' '20160718' '20160919' '20160922' '20161010' '20161103' '20161123' '20161223'
	'20170101' '20170102' '20170109' '20170211' '20170320' '20170429' '20170503' '20170504' '20170505' '20170717' '20170918' '20170923' '20171009' '20171103' '20171123' '20171223'
	'20180101' '20180108' '20180211' '20180212' '20180321' '20180429' '20180430' '20180503' '20180504' '20180505' '20180716' '20180917' '20180923' '20180924' '20181008' '20181103' '20181123' '20181223' '20181224'
	'20190101' '20190114' '20190211' '20190321' '20190429' '20190503' '20190504' '20190505' '20190506' '20190715' '20190916' '20190923' '20191014' '20191103' '20191104' '20191123' '20191223'
	'20200101' '20200113' '20200211' '20200320' '20200429' '20200503' '20200504' '20200505' '20200506' '20200720' '20200921' '20200922' '20201012' '20201103' '20201123' '20201223'
)

# 今日の日付を取得
today=`date +"%Y%m%d"`

# 祝日かを判定
for date in ${holiday[@]}
do
	if [ "$today" = "$date" ]; then
		# 祝日である
		exit 0
	fi
done

# 祝日は見つからなかった
exit 1
